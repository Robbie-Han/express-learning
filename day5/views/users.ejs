<h1><%= title %></h1>

<% if (users.length > 0) { %>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>姓名</th>
                <th>邮箱</th>
                <th>年龄</th>
                <th>角色</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.age %></td>
                    <td><%= user.role %></td>
                    <td><a href="/user/<%= user.id %>">查看</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>暂无用户数据</p>
<% } %>